<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
  xsi:type="TaskPaneApp">

  <!-- Basic Settings -->
  <Id>a1b2c3d4-e5f6-7890-abcd-ef1234567890</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>MARS Company</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="MARS Contract Review"/>
  <Description DefaultValue="Review contracts, analyze risks, and insert approved clauses directly in Microsoft Word."/>
  <IconUrl DefaultValue="https://mars-dashboards.vercel.app/word-addin/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://mars-dashboards.vercel.app/word-addin/assets/icon-64.png"/>
  <SupportUrl DefaultValue="https://mars-dashboards.vercel.app/support"/>

  <!-- Domains that will be allowed -->
  <AppDomains>
    <AppDomain>https://mars-dashboards.vercel.app</AppDomain>
    <AppDomain>https://login.microsoftonline.com</AppDomain>
  </AppDomains>

  <!-- Hosts -->
  <Hosts>
    <Host Name="Document"/>
  </Hosts>

  <!-- Requirements -->
  <Requirements>
    <Sets>
      <Set Name="WordApi" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <!-- Default Settings -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://mars-dashboards.vercel.app/word-addin/taskpane.html"/>
  </DefaultSettings>

  <!-- Permissions -->
  <Permissions>ReadWriteDocument</Permissions>

  <!-- Version Overrides for newer Office versions -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <!-- Function File for commands -->
          <FunctionFile resid="Contoso.FunctionFile.Url"/>

          <!-- Extension Point for Ribbon -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="MARS.Group">
                <Label resid="MARS.Group.Label"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>

                <!-- Analyze Button -->
                <Control xsi:type="Button" id="MARS.AnalyzeButton">
                  <Label resid="MARS.AnalyzeButton.Label"/>
                  <Supertip>
                    <Title resid="MARS.AnalyzeButton.Label"/>
                    <Description resid="MARS.AnalyzeButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>analyzeDocument</FunctionName>
                  </Action>
                </Control>

                <!-- Open TaskPane Button -->
                <Control xsi:type="Button" id="MARS.TaskpaneButton">
                  <Label resid="MARS.TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="MARS.TaskpaneButton.Label"/>
                    <Description resid="MARS.TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>MARS.Taskpane</TaskpaneId>
                    <SourceLocation resid="MARS.Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Resources -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://mars-dashboards.vercel.app/word-addin/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://mars-dashboards.vercel.app/word-addin/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://mars-dashboards.vercel.app/word-addin/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="MARS.Taskpane.Url" DefaultValue="https://mars-dashboards.vercel.app/word-addin/taskpane.html"/>
        <bt:Url id="Contoso.FunctionFile.Url" DefaultValue="https://mars-dashboards.vercel.app/word-addin/commands.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="MARS.Group.Label" DefaultValue="MARS Contracts"/>
        <bt:String id="MARS.AnalyzeButton.Label" DefaultValue="Analyze"/>
        <bt:String id="MARS.TaskpaneButton.Label" DefaultValue="Review Panel"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="MARS.AnalyzeButton.Tooltip" DefaultValue="Analyze the current document for contract risks and issues"/>
        <bt:String id="MARS.TaskpaneButton.Tooltip" DefaultValue="Open the MARS contract review panel"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
