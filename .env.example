# Database
DATABASE_URL=postgresql://user:password@host:port/database
DIRECT_URL=postgresql://user:password@host:port/database

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# NextAuth
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Clerk (if using Clerk for auth)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key
CLERK_SECRET_KEY=your-clerk-secret-key

# NetSuite Integration (Required for data sync)
NETSUITE_ACCOUNT_ID=your_account_id
NETSUITE_CONSUMER_KEY=your_consumer_key
NETSUITE_CONSUMER_SECRET=your_consumer_secret
NETSUITE_TOKEN_ID=your_token_id
NETSUITE_TOKEN_SECRET=your_token_secret

# Scheduled Sync Security (Optional)
# Set this to protect the /api/netsuite/scheduled-sync endpoint
# Vercel cron jobs automatically include this in the Authorization header
CRON_SECRET=generate-random-secret-here

# Application URL (Optional - for production)
# Used by scheduled sync to make internal API calls
NEXT_PUBLIC_BASE_URL=https://your-production-domain.com

# Microsoft Graph / OneDrive Integration (Optional)
# Required for embedding editable Word documents in approval pages
# Get these from Azure Portal -> Microsoft Entra ID -> App Registrations
MICROSOFT_TENANT_ID=your-azure-tenant-id
MICROSOFT_CLIENT_ID=your-app-client-id
MICROSOFT_CLIENT_SECRET=your-client-secret

# OneDrive folder config - use EITHER Option A OR Option B:

# Option A: Simple path-based config (recommended)
ONEDRIVE_USER_EMAIL=yourname@company.com
ONEDRIVE_FOLDER_PATH=Contract Files/MARS Contract Reviews

# Option B: Drive ID + Folder ID (if you have them)
# ONEDRIVE_DRIVE_ID=your-drive-id
# ONEDRIVE_FOLDER_ID=your-folder-id
